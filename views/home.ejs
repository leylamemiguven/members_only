    <% messages.forEach(message => { %>
        <div>
            <h2><%= message.title %></h2>
            <p><%= message.text %></p>
            
            <% if (user && user.membership_status) { %> <!-- Show author and date only to members -->
                <% if (message.author_id) { %> <!-- Only show Author if it exists -->
                    <p>Author: <%= message.author_id %></p> <!-- Replace with actual author name retrieval -->
                <% } %>
                <% if (message.created_at) { %> <!-- Only show Date if it exists -->
                    <p>Date: <%= message.created_at.toLocaleString() %></p> <!-- Format date if needed -->
                <% } %>
            <% } %>
            
            <% if (user && user.is_admin) { %> <!-- Show delete button only to admin -->
                <form action="/messages/<%= message.id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete Message</button>
                </form>
            <% } %>
        </div>
    <% }); %>
    <a href="register">Sign Up</a>
</body>
