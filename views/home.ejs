<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Members Only Club</title>
</head>
<body>
    <h1>Welcome to the Members Only Club</h1>
    <% if (user) { %>
        <p>Hello, <%= user.firstName %>! <a href="/messages/new">Create a new message</a></p>
    <% } %>
    <% if (user) { %>
        <a href="/newMessage">Create a New Message</a>
    <% } %>
    
    <!-- Existing code to display messages -->
    <% messages.forEach(message => { %>
        <div>
            <h2><%= message.title %></h2>
            <p><%= message.text %></p>
            <% if (user && user.is_admin) { %>
                <form action="/messages/<%= message.id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete Message</button>
                </form>
            <% } %>
        </div>
    <% }); %>
    <h2>Messages</h2>
    <% messages.forEach(message => { %>
        <div>
            <h2><%= message.title %></h2>
            <p><%= message.text %></p>
            <% if (user) { %>
                <p>Author: <%= message.author_id %></p> <!-- Replace with actual author name retrieval -->
                <p>Date: <%= message.created_at %></p> <!-- Ensure you have a timestamp field in your messages table -->
            <% } %>
            <% if (user && user.is_admin) { %>
                <form action="/messages/<%= message.id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete Message</button>
                </form>
            <% } %>
        </div>
    <% }); %>
    <a href="register">Sign Up</a>
</body>
</html>
